            android:id="@+id/search_detail_vehicle_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:text="@string/search_detail_vehicle_title_text_view"
            android:textColor="@color/boleias_blue"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_detail_driver_title_text_view" />

        <ImageView
            android:id="@+id/search_detail_vehicle_photo"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:textColor="@color/boleias_blue"
            app:layout_constraintBottom_toBottomOf="@+id/search_detail_vehicle_license_plate_label_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/search_detail_vehicle_brand_label_text_view"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/search_detail_vehicle_brand_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:text="@string/search_detail_vehicle_brand_label_text_view"
            android:textColor="@color/boleias_blue"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_detail_vehicle_title_text_view" />

        <TextView
            android:id="@+id/search_detail_vehicle_brand_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"
            android:textColor="@color/boleias_blue"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/search_detail_vehicle_brand_label_text_view"
            app:layout_constraintStart_toEndOf="@+id/search_detail_vehicle_brand_label_text_view"
            app:layout_constraintTop_toTopOf="@+id/search_detail_vehicle_brand_label_text_view" />

        <TextView
            android:id="@+id/search_detail_vehicle_model_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:text="@string/search_detail_vehicle_model_label_text_view"
